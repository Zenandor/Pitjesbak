<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:background="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:id="@+id/lb_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:layout_below="@id/leaderboard"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_wins"
        android:text="Wins"
        android:layout_below="@id/leaderboard"
        android:layout_toRightOf="@id/lb_player"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <View
        android:id="@+id/lb_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorAccent"
        android:layout_below="@id/lb_player" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lb_line"
        >




    </android.support.v7.widget.RecyclerView>

</RelativeLayout>